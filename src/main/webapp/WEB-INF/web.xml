    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.example.demoservlets.AuthServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CoreServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
